.user-card {
  height: 120px;
  background: linear-gradient(135deg, #006241, #0a8d5d);
  color: white;
  padding: 20px 15px;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  margin-right: 15px;
}

.user-detail {
  
}

.nick-name {
  font-size: 18px;
  font-weight: bold;
  display: block;
  margin-bottom: 5px;
}

.member-info {
  display: flex;
  align-items: center;
}

.member-level {
  font-size: 12px;
  background: rgba(255, 255, 255, 0.2);
  padding: 2px 8px;
  border-radius: 12px;
  margin-right: 10px;
}

.points {
  font-size: 12px;
}

.service-section {
  background: white;
  margin: 15px;
  border-radius: 8px;
  overflow: hidden;
}

.service-item {
  display: flex;
  align-items: center;
  padding: 15px;
  border-bottom: 1px solid #f5f5f5;
}

.service-item:last-child {
  border-bottom: none;
}

.service-icon {
  font-size: 18px;
  margin-right: 10px;
  width: 20px;
}

.service-name {
  flex: 1;
  font-size: 16px;
  color: #333;
}

.arrow {
  color: #ccc;
}

.footer-info {
  text-align: center;
  margin-top: 30px;
  color: #999;
  font-size: 12px;
}