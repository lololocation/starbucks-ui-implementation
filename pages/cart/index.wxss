.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.cart-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  background: white;
  padding: 30rpx;
  border-radius: 24rpx 24rpx 0 0;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.cart-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.cart-count {
  font-size: 32rpx;
  color: #006241;
  margin-left: 10rpx;
}

.clear-btn {
  font-size: 26rpx;
  color: #fa5151;
  padding: 10rpx 20rpx;
  border: 1rpx solid #fa5151;
  border-radius: 40rpx;
}

.cart-list {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.05);
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.cart-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  background: #f0f0f0;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  color: #999;
  font-size: 20rpx;
}

.product-info {
  flex: 1;
}

.product-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.product-size {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.product-price {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #006241;
}

.quantity-control {
  display: flex;
  align-items: center;
}

.quantity-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
}

.quantity-num {
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  min-width: 40rpx;
  text-align: center;
}

.empty-cart {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: white;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.total-info {
  flex: 1;
}

.total-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #006241;
}

.checkout-btn {
  background: #006241;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
}