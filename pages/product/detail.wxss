.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 80rpx;
}

.product-detail {
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
  margin: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.product-image-container {
  padding: 40rpx 40rpx 20rpx;
  text-align: center;
}

.product-image {
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto;
  background: #f0f0f0;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.08);
}

.product-info {
  padding: 30rpx;
  border-bottom: 20rpx solid #f5f5f5;
}

.product-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.product-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.product-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #006241;
}

.product-category {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.product-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.section {
  padding: 30rpx;
  border-bottom: 20rpx solid #f5f5f5;
}

.section:last-child {
  border-bottom: none;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.detail-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.size-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.size-option {
  padding: 15rpx 30rpx;
  border: 2rpx solid #ddd;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.size-option.active {
  border-color: #006241;
  color: #006241;
  background: rgba(0, 98, 65, 0.05);
}

.quantity-control {
  display: flex;
  align-items: center;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
}

.quantity-num {
  margin: 0 30rpx;
  font-size: 28rpx;
  color: #333;
}

.ingredients-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.ingredient-item {
  font-size: 26rpx;
  color: #666;
}

.nutrition-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.nutrition-item {
  text-align: center;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.nutrition-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #006241;
  margin-bottom: 8rpx;
}

.nutrition-label {
  font-size: 24rpx;
  color: #999;
}

.bottom-action {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: white;
  display: flex;
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin: 0 10rpx;
}

.cart-btn {
  background: #f0f0f0;
  color: #333;
}

.buy-btn {
  background: #006241;
  color: white;
}

.btn-text {
  font-size: 28rpx;
  font-weight: bold;
}