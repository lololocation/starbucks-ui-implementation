.order-detail-card {
  background: white;
  margin: 10px;
  border-radius: 8px;
  overflow: hidden;
}

.order-status-bar {
  padding: 15px;
  text-align: center;
  background: #f8f8f8;
}

.status-text {
  font-size: 16px;
  font-weight: bold;
  padding: 4px 16px;
  border-radius: 20px;
}

.status-text.processing {
  background: #fff4e0;
  color: #fa8c16;
}

.status-text.completed {
  background: #f0f9eb;
  color: #52c41a;
}

.order-basic-info {
  padding: 15px;
}

.product-item {
  display: flex;
  margin-bottom: 20px;
}

.product-image {
  width: 80px;
  height: 80px;
  background: #f0f0f0;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15px;
  color: #999;
  font-size: 12px;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15px;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 16px;
  font-weight: bold;
  color: #006241;
}

.product-count {
  color: #999;
}

.order-meta-info {
  border-top: 1px solid #f0f0f0;
  padding-top: 15px;
}

.info-row {
  display: flex;
  margin-bottom: 10px;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  width: 80px;
  color: #999;
  font-size: 14px;
}

.value {
  flex: 1;
  color: #333;
  font-size: 14px;
  word-break: break-all;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 15px;
}