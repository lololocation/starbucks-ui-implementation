.banner-swiper {
  height: 180px;
  width: 100%;
}

.banner-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  background: linear-gradient(135deg, #006241, #0a8d5d);
  border-radius: 24rpx;
  overflow: hidden;
}

.banner-content {
  text-align: center;
  color: white;
}

.banner-icon {
  font-size: 40rpx;
  display: block;
  margin-bottom: 10rpx;
}

.banner-title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
}

.banner-subtitle {
  font-size: 32rpx;
  opacity: 0.9;
  display: block;
  margin-top: 16rpx;
}

.recommend-section {
  margin-top: 20px;
}

.section-header {
  padding: 0 15px 10px;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.recommend-list {
  display: flex;
  flex-direction: column;
}

.recommend-item {
  display: flex;
  padding: 30rpx;
  background: white;
  margin-bottom: 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.05);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.recommend-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 24rpx rgba(0,0,0,0.1);
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  background: #f0f0f0;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  color: #999;
  font-size: 24rpx;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  display: block;
}

.product-desc {
  font-size: 12px;
  color: #999;
  margin: 5px 0;
  display: block;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10px;
}

.product-price {
  font-size: 16px;
  font-weight: bold;
  color: #006241;
}

.add-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #006241;
  color: white;
  border: none;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.3s ease;
}

.add-btn:hover {
  background: #005136;
}